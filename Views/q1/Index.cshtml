@{
    ViewData["Title"] = "Home";
}

<div class="content flex-wrap">
    <div class="row align-items-center align-content-center">
        <div class="col m-1 text-center">
            <img src="~/assets/friend.png" width="325" height="326" />
        </div>
        <div class="col m-1 text-center">
            <p class="text-dark">Find your helpful personal assistant <span class="greeny bold">WORLDWIDE</span> for any purpose of
                work in <span class="bold">Assist.<span class="greeny">io!</span></span></p>
            <img src="~/assets/jobs.png" width="400">
        </div>
        <div class="col m-1 text-center">
            <div class="enroll p-3 ">
            <h2 class="m-2">Sign Up Now!</h2>
            <div class="register m-3">
                <input type="text" class="reg_input form-control" placeholder="Name">
            </div>
            <div class="register m-3">
                <input type="email" class="reg_input form-control" placeholder="Email">
            </div>
            <div class="register m-3">
                <input type="password" class="reg_input form-control" placeholder="Password">
            </div>
            <div class="register m-3">
                <input type="password" class="reg_input form-control" placeholder="Retype Password">
            </div>
            <div class="register m-3">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Choose Your Role</option>
                    <option value="1">Assistant</option>
                    <option value="2">Assistant Seeker</option>
                </select>
            </div>
            <div class="register m-2">
                <p>Creating account means agreeing all terms, conditions, privacy and policy apply.<br></p>
                <p>Already have an account? <span><a class="greeny" href="#">Sign in</a></span> here!</p>
            </div>
            <div class="register align-items-end">
            <button class="button btn register_submit">
                Register
            </button>
            </div>
            </div>
        </div>
    </div>
</div>
</div>
